<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
   <p id="results"></p>
    <script>
        fetch("http://localhost:8080/products").then((res) => {
            return res.json()
        }).then((response) => {
            var results = document.getElementById("results")
            response.forEach((e) => {
               // var temp = JSON.parse(e)
                results.innerHTML += `<h3>${e.name}</h3>` + "<br>"
               results.innerHTML += `<a href = "/product/${e._id}"><img src ="${e.image_link}" width = 250 height = 250</a>` + "<br>"
               results.innerHTML += `<p style = "font-size : 25px"> Price : $ ${e.price} </p>` + "<hr>"
            })
            
            var myObj = JSON.parse(response[0])
            results.innerHTML = myObj[0].name
        })
    </script>
</body>
</html>